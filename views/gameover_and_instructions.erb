<% if (@gamehash.guesses[0] && (@gamehash.code == @gamehash.guesses[0][:guess])) %>
  <div class="gameover">
    <p>You won in <%=  @gamehash.guesses.length %> tries.</p>
    <% @gameover = true %>
    <form method="post" action="/restart">
      <input type="hidden" name="restart" value="<%= @gamehash.codelength %>">
      <button type="submit" class="btn btn-success">New Game?</button>
    </form>
  </div>
<% elsif @gamehash.limit <= @gamehash.guesses.length %>
<div class="gameover">
  <p>Sorry, you reached the limit of <%=  @gamehash.limit %> guesses!</p>
  <% @gameover = true %>
  <form method="post" action="/restart">
    <input type="hidden" name="restart" value="<%= @gamehash.codelength %>">
    <button type="submit" class="btn btn-success">New Game?</button>
  </form>
</div>
<% elsif @instructions == "open" %>
  <p class="well" id="instructions">
     Guess the <%= @gamehash.codelength %>-peg code in <%= @gamehash.limit %>
     guesses! Click the holes to cycle through the peg colors, then click the
     checkmark to submit a guess. Each small black peg you receive back means
     you guessed the right color in the right position. Each white means you
     guessed the right color, but in the wrong position.
     <span class="dismiss"><a onclick="closeInstructions();">Dismiss</a></span></p>
   <form method="post" action="/close_instructions" id="close_instructions">
     <input type="hidden">
   </form>
<% end %>
