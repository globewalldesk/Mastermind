<% unless @gamehash.guesses.empty? # Don't render rows, yet, if no guesses yet. %>
  <% @gamehash.guesses.each_with_index do |row, r| # Row contains ALL info on row. %>
    <div class="row pegrow">
      <div class="pegcell">
        <div class="number"><%= @gamehash.guesses.length - r %></div>
      </div>
      <% row[:guess].each_with_index do |guess, i| # The :guess key => array of guesses.  %>
        <div class="pegcell">
          <div class="peg center-block <%= guess %>"></div>
        </div>
      <% end %>
      <div class="resultbox">
        <div class="resultrow">
          <div class="resultcell">
            <div class="result-<%= row[:resultwords][0] %>"></div>
          </div>
          <div class="resultcell">
            <div class="result-<%= row[:resultwords][1] %>"></div>
          </div>
          <% if @gamehash.codelength > 4 %>
          <div class="resultcell">
            <div class="result-<%= row[:resultwords][2] %>"></div>
          </div>
          <% end %>
        </div>
        <div class="resultrow">
          <% if @gamehash.codelength < 5 %>
          <div class="resultcell">
            <div class="result-<%= row[:resultwords][2] %>"></div>
          </div>
          <div class="resultcell">
            <div class="result-<%= row[:resultwords][3] %>"></div>
          </div>
          <% else %>
          <div class="resultcell">
            <div class="result-<%= row[:resultwords][3] %>"></div>
          </div>
          <div class="resultcell">
            <div class="result-<%= row[:resultwords][4] %>"></div>
          </div>
          <div class="resultcell">
            <div class="result-<%= row[:resultwords][5] %>"></div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
